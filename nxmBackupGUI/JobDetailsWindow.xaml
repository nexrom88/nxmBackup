<Window x:Class="nxmBackupGUI.JobDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nxmBackupGUI"
        mc:Ignorable="d"
        Title="Job Details" Height="381" Width="310" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>

        <ComboBox x:Name="cbRotationType" Margin="20,170,20,0" VerticalAlignment="Top" Grid.ColumnSpan="2" SelectedIndex="0" SelectionChanged="cbRotationType_SelectionChanged">
            <ComboBoxItem Content="Zusammenführen" Uid="merge"/>
            <ComboBoxItem Content="Blockrotation" Uid="blockrotation"/>
        </ComboBox>
        <Label Content="Rotationstyp:" Margin="20,140,20,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <ComboBox x:Name="cbBlockSize" Margin="20,100,20,0" VerticalAlignment="Top" Grid.ColumnSpan="2" IsEditable="True">
        </ComboBox>
        <Label Content="Vollbackup nach Anzahl inkrmentieller Backups:" Margin="20,70,20,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <CheckBox x:Name="cbIncrements" Content="Inkrementielle Backups verwenden" Margin="20,30,20,0" VerticalAlignment="Top" Checked="cbIncrements_Checked" Unchecked="cbIncrements_Unchecked" Grid.ColumnSpan="2"/>
        <Button Content="Übernehmen" Margin="95,285,105,0" VerticalAlignment="Top" Height="40" Click="Button_Click"/>
        <Label x:Name="lblBlocksCaption" Content="Anzahl aufzubewahrender Backups:" Margin="20,210,20,0" VerticalAlignment="Top"/>
        <Slider x:Name="slMaxElements" Margin="20,240,70,0" VerticalAlignment="Top" IsSnapToTickEnabled="True" Minimum="1" SmallChange="1" TickPlacement="TopLeft" Value="1"/>
        <TextBox Text="{Binding ElementName=slMaxElements, Path=Value, UpdateSourceTrigger=PropertyChanged}" DockPanel.Dock="Right" TextAlignment="Right"  Margin="250,240,20,0" VerticalAlignment="Top" Height="24" />

    </Grid>
</Window>
